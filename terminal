#The Command Line Interface
echo "Hello World"

~          #check catalog
ls         #List files and directories in current directory
ls /
ls -lah
ls -a
ls -al
pwd        #present working directory
cd         #Change directorys
touch      #Create a file
cp         #Copy a file or directory
mkdir      #Create a directory
rm         #Remove a file
rm -rf     #Remove a directory
mv name newname #Move or rename a file or directory
cat name   #Display contents of a file
chmod 777 first.txt  #Setting Permissions
sudo su
sudo su -

top
q

vim first.txt
<ESC> + :wq      #Exit and save
<ESC> + :q!      #Exit without saving

